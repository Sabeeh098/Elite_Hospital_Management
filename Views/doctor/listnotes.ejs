<div class="content">
  <div class="page-header">
    <div class="page-title">
      <h4>NOTES LIST</h4>
      <h6>Manage your Notes</h6>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <!-- Filter Section -->
      <div class="table-top">
        <!-- Filter Icon -->
        <div class="search-set">
          <div class="search-path">
            <a class="btn btn-filter" id="filter_search">
              <img src="assets/img/icons/filter.svg" alt="Filter" />
              <span><img src="assets/img/icons/closes.svg" alt="Close" /></span>
            </a>
          </div>
          <!-- Search Icon -->
          <div class="search-input">
            <a class="btn btn-searchset">
              <img src="assets/img/icons/search-white.svg" alt="Search" />
            </a>
          </div>
        </div>
        <!-- File Export Icons -->
        <div class="wordset">
          <ul>
            <li><a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img src="assets/img/icons/pdf.svg" alt="PDF" /></a></li>
            <li><a data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img src="assets/img/icons/excel.svg" alt="Excel" /></a></li>
            <li><a data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img src="assets/img/icons/printer.svg" alt="Print" /></a></li>
          </ul>
        </div>
      </div>

      <!-- Filter Inputs (Hidden by default) -->
      <div class="card" id="filter_inputs">
        <div class="card-body pb-0">
          <div class="row">
            <!-- Date Filter -->
            <div class="col-lg col-sm-6 col-12">
              <div class="form-group">
                <input type="text" class="datetimepicker cal-icon" placeholder="Choose Date" />
              </div>
            </div>
            <!-- Reference Filter -->
            <div class="col-lg col-sm-6 col-12">
              <div class="form-group">
                <input type="text" placeholder="Enter Reference" />
              </div>
            </div>
            <!-- Supplier Filter -->
            <div class="col-lg col-sm-6 col-12">
              <div class="form-group">
                <select class="select">
                  <option>Choose Supplier</option>
                  <option>Supplier</option>
                </select>
              </div>
            </div>
            <!-- Status Filter -->
            <div class="col-lg col-sm-6 col-12">
              <div class="form-group">
                <select class="select">
                  <option>Choose Status</option>
                  <option>In Progress</option>
                </select>
              </div>
            </div>
            <!-- Payment Status Filter -->
            <div class="col-lg col-sm-6 col-12">
              <div class="form-group">
                <select class="select">
                  <option>Choose Payment Status</option>
                  <option>Payment Status</option>
                </select>
              </div>
            </div>
            <!-- Search Button -->
            <div class="col-lg-1 col-sm-6 col-12">
              <div class="form-group">
                <a class="btn btn-filters ms-auto">
                  <img src="assets/img/icons/search-whites.svg" alt="Search" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /Filter Inputs -->

   
 <!-- Table Section -->
 <div class="table-responsive">
  <table class="table datanew">
    <thead>
      <tr>
        <th>
          <label class="checkboxs">
            <input type="checkbox" id="select-all" />
            <span class="checkmarks"></span>
          </label>
        </th>
        <th>Date</th>
        <th>Note</th>
      </tr>
    </thead>
    <tbody>
      <% for (let note of notes.split('\n')) { %>
        <% const [date, content] = note.split(': '); %>
        <tr>
          <td>
            <label class="checkboxs">
              <input type="checkbox" />
              <span class="checkmarks"></span>
            </label>
          </td>
          <td><%= date %></td>
          <td><%= content %></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
<!-- /Table Section -->

    </div>
  </div>
</div>
