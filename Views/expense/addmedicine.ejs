<div class="card">
  <div class="card-body">
    <form id="medicineForm" action="/add-medicine" method="post" enctype="multipart/form-data">

      <div class="row">
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="form-group">
            <label for="medicineName">Medicine Name</label>
            <input type="text" id="medicineName" name="medName" placeholder="Enter Medicine Name" />          </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="form-group">
            <label for="medicineCategory">Medicine Category</label>
            <select id="medicineCategory" name="medCategory" class="select">              <option>Choose Category</option>
              <option>Tablet</option>
              <option>Capsules</option>
              <option>Syrups</option>
              <option>Injections</option>
              
            </select>
          </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="form-group">
            <label for="medicineCompany">Medicine Company</label>
            <input type="text" id="medicineCompany" name="medCompany" placeholder="Enter Medicine Company" />          </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="form-group">
            <label for="medicineDescription">Medicine Description</label>
            <textarea id="medicineDescription" name="medDescription" class="form-control" placeholder="Enter Medicine Description"></textarea>  
                  </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="form-group">
            <label for="medicinePrice">Medicine Price</label>
            <div class="input-groupicon">
              <input type="text" id="medicinePrice" name="medPrice" placeholder="Enter Medicine Price" />              <div class="addonset">
                <img src="assets/img/icons/dollar.svg" alt="img" />
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="form-group">
            <label for="medicinePhoto">Medicine Photo</label>
            <input type="file" id="medicinePhoto" name="medPhoto" accept="image/*" />
          </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="form-group">
            <label for="barcodePhoto">Barcode Photo</label>
            <input type="file" id="barcodePhoto" name="medBarcode" accept="image/*" />
          </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="form-group">
            <label for="barcodeCode">Medicine Barcode Code</label>
            <input type="text" id="barcodeCode" name="medBarcodeCode" placeholder="Enter Medicine Barcode Code" />
          </div>
        </div>
        <div class="col-lg-12">
          <button type="submit" class="btn btn-submit me-2">Submit</button>
          <a href="" class="btn btn-cancel">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>



<!-- /Main Wrapper -->